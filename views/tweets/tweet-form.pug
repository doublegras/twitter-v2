extends ../layout.pug

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container")
            include ../include/profile
        div(class="flex-fill")
            form(class="card" method="post" action= tweet._id ? '/tweets/update/' + tweet._id : '/tweets')
                div(class="card-header") Ecrire un Tweet
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content" placeholder="What is happening")= tweet.content
                    if errors
                        ul
                            each error in errors
                                li(class="text-danger my-2")= error
                    div(class="w-100")
                        input(type="submit" value="Send" class="btn btn-primary ml-auto d-block formBtn")