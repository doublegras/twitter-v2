extends ../layout

block content
  div(class="d-flex flex-row content justify-content-center mx-auto")
    form(class="card" method="post" action="/auth/signin")
      div(class="card-header") Connexion
      a(href="/auth/google" style="text-align : center" class="mt-3") Connexion avec google 
      div(class="card-body")
        div(class="form-group")
          label Email
          input(class="form-control" type="email" name="email")
        div(class="form-group")
          label Password
          input(class="form-control" type="password" name="password")
        if errors
          p(style="color: red")= errors
        div(class="w-100")
          input(type="submit" value="connexion" class="btn btn-primary ml-auto d-block")
