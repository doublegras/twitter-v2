extends ../layout

block content
	script(src="/javascript/auth-form.js") 
	div(class="d-flex flex-row content justify-content-center mx-auto")
		form(class="card" method="post" action=url)
			div(class="card-body")
				div(class="form-group")
					label New Password
					input(class="form-control inputPassword" type="password" name="password")
				if errors
					ul(class="my-2")
						each error in errors
							li(class="text-danger")= error
				div(class="w-100 d-flex flex-row justify-content-space-between align-items-center")
					input(type="submit" value="reset-password" class="btn btn-primary ml-auto d-block")